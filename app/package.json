{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "tsc -noEmit && next lint && yarn prettier:check",
    "db:start": "sudo service postgresql start",
    "docker:start": "docker-compose up",
    "db:generate:local": "dotenv -e .env.local -- yarn prisma generate",
    "db:push:local": "cli-confirm \"Do you really want to do a push?\" && dotenv -e .env.local -- yarn prisma db push",
    "db:migrate:init:local": "dotenv -e .env.local -- prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > prisma/migrations/init/migration.sql",
    "db:migrate:resolve:local": "dotenv -e .env.local -- prisma migrate resolve --applied init",
    "db:migrate:local": "dotenv -e .env.local -- prisma migrate dev",
    "db:migrate:local:createonly": "dotenv -e .env.local -- prisma migrate dev --create-only",
    "db:migrate:reset:local": "dotenv -e .env.local -- prisma migrate reset",
    "db:generate:staging": "dotenv -e .env.staging -- yarn prisma generate",
    "db:push:staging": "dotenv -e .env.staging -- yarn prisma db push",
    "db:migrate:resolve:staging": "dotenv -e .env.staging -- prisma migrate resolve --applied init",
    "db:migrate:deploy:staging": "dotenv -e .env.staging -- prisma migrate deploy",
    "db:generate:production": "dotenv -e .env.production -- yarn prisma generate",
    "db:push:production": "dotenv -e .env.production -- yarn prisma db push",
    "db:migrate:resolve:production": "dotenv -e .env.production -- prisma migrate resolve --applied init",
    "db:migrate:deploy:production": "dotenv -e .env.production -- prisma migrate deploy",
    "db:studio:local": "dotenv -e .env.local -- prisma studio",
    "db:connect:local": "psql postgres://user:password@localhost:5432/lightsats",
    "db:connect:staging": "flyctl postgres connect -a lightsats-db",
    "deploy:staging": "fly deploy -c fly-staging.toml --remote-only",
    "deploy:production": "cli-confirm \"Do you really want to do a production deployment?\" && fly deploy -c fly-production.toml --remote-only",
    "prettier:fix": "yarn prettier --write . --check '!.db'",
    "prettier:check": "yarn prettier --check . --check '!.db'",
    "logs:staging": "fly logs -a lightsats",
    "logs:production": "fly logs -a lightsats-prod",
    "items:deletePlaceholders": "cli-confirm \"Confirm no outstanding changes\" && ts-node deletePlaceholders.ts && yarn prettier:fix",
    "items:placeholders": "cli-confirm \"Confirm no outstanding changes\" && ts-node deletePlaceholders.ts && ts-node generateItemPlaceholders.ts && yarn prettier:fix",
    "items:filesizes": "ts-node checkItemImageFilesizes.ts"
  },
  "dependencies": {
    "@faire/mjml-react": "^3.0.0",
    "@heroicons/react": "^2.0.12",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@nextui-org/react": "^1.0.0-beta.10",
    "@prisma/client": "4.4.0",
    "@sentry/nextjs": "^7.20.0",
    "alby-tools": "^1.2.1",
    "bolt11": "^1.4.0",
    "chart.js": "^3.9.1",
    "copy-to-clipboard": "^3.3.2",
    "currency-symbol-map": "^5.1.0",
    "date-fns": "^2.29.3",
    "dom-confetti": "^0.2.2",
    "http-status-codes": "^2.2.0",
    "i18next": "^22.0.4",
    "i18next-fs-backend": "^2.0.0",
    "iso-639-1-plus": "^3.0.3",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "lnurl": "^0.24.2",
    "mjml": "^4.13.0",
    "next": "12.3.1",
    "next-auth": "^4.13.0",
    "next-i18next": "^12.1.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.8.0",
    "react": "18.2.0",
    "react-chartjs-2": "^4.3.1",
    "react-countdown": "^2.3.5",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.38.0",
    "react-hot-toast": "^2.4.0",
    "react-i18next": "^12.0.0",
    "react-in-viewport": "^1.0.0-alpha.28",
    "react-phone-number-input": "^3.2.12",
    "react-qr-code": "^2.0.8",
    "react-select": "^5.6.1",
    "react-to-print": "^2.14.10",
    "react-twitter-widgets": "^1.11.0",
    "request-ip": "^3.3.0",
    "swiper": "^8.4.4",
    "swr": "^1.3.0",
    "twilio": "^3.83.1",
    "use-count-up": "^3.0.1",
    "uuid": "^9.0.0",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "18.8.4",
    "@types/nodemailer": "^6.4.6",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/request-ip": "^0.0.37",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@webbtc/webln-types": "^1.0.10",
    "cli-confirm": "^1.0.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "8.25.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "plaiceholder": "^2.5.0",
    "prettier": "2.7.1",
    "prisma": "^4.4.0",
    "sharp": "^0.31.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.8.4"
  }
}
